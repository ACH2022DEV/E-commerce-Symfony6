{% extends 'base.html.twig' %}

{% block title %}MyUser{% endblock %}

{% block body %}
    <h1>MyUser</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ my_user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ my_user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ my_user.roles ? my_user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ my_user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_my_user_index') }}">back to list</a>

    <a href="{{ path('app_my_user_edit', {'id': my_user.id}) }}">edit</a>

